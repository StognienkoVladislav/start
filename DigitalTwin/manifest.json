{
  "manifest_version": 2,

  "name": "Digital Twin Market",
  "description": "Best for you in digital format",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png"
    //"default_popup": "popup.html"
  },

  "icons"  :{
    "64" : "img/icon.png",
    "128" : "img/icon.png"
  },

  "content_scripts" : [
    {
      "matches" : ["http://*/*", "https://*/*"],
      "css" : ["css/style.css"],
      "js" : ["js/script.js", "js/jquery.js"]
    }
  ],

  "web_accessible_resources" : [
    "MagicButton.html",
    "css/style.css",
    "css/reset.css"
  ]
}
